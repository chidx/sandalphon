# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Imports
->                                                                  /                                 commons.Routes

# Home page
GET                                                                 /                                 org.iatoki.judgels.sandalphon.controllers.Application.index()

# Map static resources from the /public folder to the /assets URL path
GET                                                                 /assets/*file                     controllers.Assets.at(path="/public", file)
GET                                                                 /vassets/*file                    controllers.Assets.versioned(path="/public", file: Asset)

GET                                                                 /programmingProblem                          @org.iatoki.judgels.sandalphon.controllers.ProgrammingProblemController.list(page: Long ?= 0, sortBy ?= "id", orderBy ?= "asc", filterString ?= "")
GET                                                                 /programmingProblem/create                   @org.iatoki.judgels.sandalphon.controllers.ProgrammingProblemController.create()
POST                                                                /programmingProblem/create                   @org.iatoki.judgels.sandalphon.controllers.ProgrammingProblemController.doCreate()
GET                                                                 /programmingProblem/:modelId/view          @org.iatoki.judgels.sandalphon.controllers.ProgrammingProblemController.view(modelId: Long)
GET                                                                 /programmingProblem/:modelId/update        @org.iatoki.judgels.sandalphon.controllers.ProgrammingProblemController.update(modelId: Long)
GET                                                                 /programmingProblem/:modelId/updateStatement        @org.iatoki.judgels.sandalphon.controllers.ProgrammingProblemController.updateStatement(modelId: Long)
POST                                                                 /programmingProblem/:modelId/doUpdateStatement        @org.iatoki.judgels.sandalphon.controllers.ProgrammingProblemController.doUpdateStatement(modelId: Long)
POST                                                                /programmingProblem/:modelId/doUpdate        @org.iatoki.judgels.sandalphon.controllers.ProgrammingProblemController.doUpdate(modelId: Long)
GET                                                                 /programmingProblem/:modelId/delete        @org.iatoki.judgels.sandalphon.controllers.ProgrammingProblemController.delete(modelId: Long)
